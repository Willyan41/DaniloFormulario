@model VendaViewModel
<form asp-controller="Venda" asp-action="Add" method="post" enctype="multipart/form-data" class="pure-form pure-form-aligned">
    <fieldset>
        <div class="pure-control-group">
            <label asp-for="IdCliente">IdCliente</label>
            <input asp-for="IdCliente" required class="pure-input-2-3" />
        </div>
        <div class="pure-control-group">
            <label asp-for="IdVeiculo">IdVeiculo</label>
            <input asp-for="IdVeiculo" required class="pure-input-2-3" />
        </div>


        <div class="pure-controls">
            <input type="submit" value="Salvar" class="pure-button pure-button-primary" />
        </div>
    </fieldset>
</form>